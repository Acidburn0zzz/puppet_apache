        <%- else -%>
        SecAuditEngine On
        <%- end -%>
        <%- else -%>
        SecRuleEngine Off
        SecAuditEngine Off
        <%- end -%>
        SecAuditLogType Concurrent
        SecAuditLogStorageDir <%= logdir %>/
        SecAuditLog <%= logdir %>/mod_security_audit.log
