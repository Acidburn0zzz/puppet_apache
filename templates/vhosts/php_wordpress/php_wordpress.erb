    </Directory>

    <%- unless run_mode.to_s =~ /(proxy\-|static\-)itk/ -%>
<%= scope.function_template('apache/vhosts/partials/mod_security.erb') %>
    <%- end -%>

    <%- unless additional_options.to_s == 'absent' then -%>
    <%= additional_options %>
    <%- end -%>
</VirtualHost>
<%- end -%>
<%- if run_mode.to_s =~ /(proxy\-|static\-)itk/ -%>
